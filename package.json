{
  "name": "reason-redis",
  "version": "0.0.0",
  "description": "My Project",
  "esy": {
    "build": "dune build -p reason-redis",
    "buildDev": "pesy",
    "release": {
      "releasedBinaries": [
        "ReasonRedisApp.exe"
      ]
    }
  },
  "buildDirs": {
    "bin": {
      "require": [
        "opium",
        "redis",
        "redis-lwt",
        "lwt",
        "lwt.unix"
      ],
      "preprocess": [
        "pps",
        "lwt_ppx"
      ],
      "flags": [
        "-ccopt",
        "-static"
      ],
      "main": "ReasonRedisApp",
      "name": "ReasonRedisApp.exe"
    }
  },
  "scripts": {
    "pesy": "bash -c 'env PESY_MODE=update pesy'",
    "test": "esy x TestReasonRedis.exe"
  },
  "dependencies": {
    "@esy-ocaml/reason": "*",
    "@opam/dune": ">=1.6.0",
    "@opam/lwt": "4.4.0",
    "@opam/lwt_ppx": "1.2.4",
    "@opam/opium": "0.17.1",
    "@opam/redis": "0.3.6",
    "@opam/redis-lwt": "0.3.6",
    "ocaml": "^4.4.0"
  },
  "devDependencies": {
    "ocaml": "4.7.1004",
    "refmterr": "*",
    "pesy": "*",
    "@opam/merlin": "*"
  },
  "resolutions": {
    "ocaml": "github:EduardoRFS/ocaml:package.json#594b838eb90f3b7ed02cd7d0112ce0f52efe95e3"
  }
}
